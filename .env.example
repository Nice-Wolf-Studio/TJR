# Example environment variables for TJR Suite
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# Database connection strings
# SQLite (local development/testing)
DATABASE_URL=sqlite:data/local.db

# PostgreSQL (production)
# DATABASE_URL=postgresql://username:password@localhost:5432/database_name

# Discord Bot Configuration
# Development environment
DISCORD_DEV_TOKEN=your_dev_bot_token_here
DISCORD_DEV_APPLICATION_ID=your_dev_application_id_here
DISCORD_DEV_GUILD_IDS=dev_guild_id_1,dev_guild_id_2

# Staging environment
DISCORD_STAGE_TOKEN=your_stage_bot_token_here
DISCORD_STAGE_APPLICATION_ID=your_stage_application_id_here
DISCORD_STAGE_GUILD_IDS=staging_guild_id

# Production environment
DISCORD_PROD_TOKEN=your_production_bot_token_here
DISCORD_PROD_APPLICATION_ID=your_production_application_id_here
# Note: Production uses global registration, no guild IDs needed

# Note: Never hardcode credentials in source code
# Use environment variables for all sensitive configuration