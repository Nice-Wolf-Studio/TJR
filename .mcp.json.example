{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "mcpServers": {
    "discord": {
      "type": "stdio",
      "command": "node",
      "args": ["packages/discord-mcp/dist/index.js"],
      "env": {
        "DISCORD_TOKEN": "your-discord-bot-token-here"
      },
      "description": "Discord bot integration for TJR Suite"
    },
    "databento": {
      "type": "stdio",
      "command": "node",
      "args": ["/path/to/databento-mcp-server/dist/index.js"],
      "env": {
        "DATABENTO_API_KEY": "your-databento-api-key-here"
      },
      "description": "Databento market data provider"
    },
    "supabase": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@supabase/mcp-server-supabase",
        "--access-token",
        "your-supabase-access-token-here"
      ],
      "description": "Supabase database and project management"
    }
  }
}
