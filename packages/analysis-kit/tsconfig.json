{
  // TypeScript configuration for analysis-kit package
  // Extends base config from monorepo root
  "extends": "../../tsconfig.base.json",

  "compilerOptions": {
    // Override output directory for this package
    "outDir": "./dist",

    // Root directory for source files
    "rootDir": "./src"
  },

  // Include source files
  "include": ["src/**/*.ts"],

  // Explicitly exclude test files, node_modules, and build artifacts
  "exclude": ["node_modules", "dist", "tests"]
}
