# TJR Suite Environment Configuration
# Copy this file to .env and customize for your environment

# ============================================================================
# Application Settings
# ============================================================================

# Environment: development, staging, production
NODE_ENV=development

# Enable dry-run mode (uses fixtures, deterministic output)
DRY_RUN=false

# Enable verbose logging and wiring graph output
VERBOSE=false

# ============================================================================
# Logging Configuration
# ============================================================================

# Log level: error, warn, info, debug, trace
LOG_LEVEL=info

# Log format: json, pretty
LOG_FORMAT=pretty

# Log output: console, file, both
LOG_OUTPUT=console

# Log file path (only used if LOG_OUTPUT=file or both)
# LOG_FILE_PATH=./logs/tjr.log

# ============================================================================
# Discord Bot Configuration
# ============================================================================

# Enable Discord bot interface
DISCORD_ENABLED=false

# Discord bot token (required if DISCORD_ENABLED=true)
# DISCORD_TOKEN=your_bot_token_here

# Discord client ID (for slash commands)
# DISCORD_CLIENT_ID=your_client_id

# Discord guild ID (for guild-specific commands)
# DISCORD_GUILD_ID=your_guild_id

# Command prefix for Discord commands
# DISCORD_COMMAND_PREFIX=/

# ============================================================================
# Supabase Configuration
# ============================================================================

# Supabase project URL
# SUPABASE_URL=https://your-project.supabase.co

# Supabase anon/public key (for client-side access)
# Or use service role key for server-side operations
# SUPABASE_KEY=your_supabase_key_here

# ============================================================================
# Data Provider Configuration
# ============================================================================

# Provider type: fixture, polygon, alpaca
PROVIDER_TYPE=fixture

# Provider API key (required for polygon/alpaca)
# PROVIDER_API_KEY=your_api_key_here

# Provider base URL (optional, uses defaults)
# PROVIDER_BASE_URL=

# Request timeout in milliseconds
# PROVIDER_TIMEOUT=30000

# Number of retries for failed requests
# PROVIDER_RETRIES=3

# Enable provider-level caching
# PROVIDER_CACHE_ENABLED=true

# ============================================================================
# Cache Configuration
# ============================================================================

# Cache type: memory, redis
CACHE_TYPE=memory

# Default TTL in milliseconds (5 minutes)
CACHE_DEFAULT_TTL=300000

# Maximum cache size in bytes (100MB)
CACHE_MAX_SIZE=104857600

# Cache eviction policy: lru, lfu, fifo
CACHE_EVICTION_POLICY=lru

# Redis configuration (only if CACHE_TYPE=redis)
# CACHE_REDIS_HOST=localhost
# CACHE_REDIS_PORT=6379
# CACHE_REDIS_PASSWORD=
# CACHE_REDIS_DB=0

# ============================================================================
# Database Configuration
# ============================================================================

# Database type: sqlite, postgres
DATABASE_TYPE=sqlite

# Database URL
# SQLite: sqlite:path/to/database.db
# Postgres: postgresql://user:password@host:port/database
DATABASE_URL=sqlite:tjr.db

# Connection pool size
# DATABASE_POOL_SIZE=10

# Enable auto-migrations
# DATABASE_MIGRATIONS_ENABLED=true

# Migrations directory path
# DATABASE_MIGRATIONS_PATH=./migrations

# ============================================================================
# Trading Calendar Configuration
# ============================================================================

# Market timezone
# CALENDAR_TIMEZONE=America/New_York

# Regular market hours
# CALENDAR_MARKET_OPEN=09:30
# CALENDAR_MARKET_CLOSE=16:00

# Extended hours
# CALENDAR_PREMARKET_OPEN=04:00
# CALENDAR_AFTERMARKET_CLOSE=20:00

# ============================================================================
# Analysis Configuration
# ============================================================================

# Default symbol for analysis
# ANALYSIS_DEFAULT_SYMBOL=SPY

# Default timeframe
# ANALYSIS_DEFAULT_TIMEFRAME=5m

# Number of bars required for analysis
# ANALYSIS_BARS_REQUIRED=78