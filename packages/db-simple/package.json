{
  "name": "@tjr-suite/db-simple",
  "version": "0.0.1",
  "description": "Minimal database connection and migration runner for SQLite and PostgreSQL",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc --build",
    "test": "node --test tests/index.test.js",
    "test:pg": "node --test tests/postgres.test.js",
    "test:all": "node --test tests/*.test.js",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist *.tsbuildinfo"
  },
  "keywords": [
    "tjr-suite",
    "database",
    "sqlite",
    "postgresql",
    "migrations"
  ],
  "license": "UNLICENSED",
  "dependencies": {
    "better-sqlite3": "^11.0.0",
    "pg": "^8.13.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^18.19.0",
    "@types/pg": "^8.11.10"
  }
}