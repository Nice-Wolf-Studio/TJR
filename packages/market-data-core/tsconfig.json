{
  // TypeScript configuration for market-data-core package
  // Extends base config from monorepo root
  "extends": "../../tsconfig.base.json",

  "compilerOptions": {
    // Override output directory for this package
    "outDir": "./dist",

    // Root directory for source files
    "rootDir": "./src",

    // Output ES modules (package.json has "type": "module")
    "module": "ES2022",
    "moduleResolution": "bundler"
  },

  // Include only source files (not tests)
  "include": ["src/**/*"],

  // Explicitly exclude test files, node_modules, and build artifacts
  "exclude": ["node_modules", "dist", "tests"]
}