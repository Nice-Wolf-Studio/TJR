{
  "name": "trading-bot",
  "version": "1.0.0",
  "description": "Professional Trading Discord Bot with advanced market analysis features",
  "main": "dist/index.js",
  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "build:watch": "tsc -p tsconfig.json --watch",
    "dev": "ts-node --transpile-only src/index.ts",
    "start": "node dist/index.js",
    "bot": "ts-node --transpile-only start-simple.ts",
    "bot:register": "ts-node --transpile-only src/bot/register.ts",
    "bot:register:guild": "ts-node --transpile-only src/bot/register.ts guild",
    "bot:clear": "ts-node --transpile-only src/bot/register.ts clear",
    "bot:list": "ts-node --transpile-only src/bot/register.ts list",
    "migrate": "ts-node --transpile-only src/database/simple-migrate.ts",
    "migrate:rollback": "ts-node --transpile-only src/database/migrate.ts rollback",
    "test": "jest",
    "test:integration": "ts-node --transpile-only tests/test-runner.ts",
    "test:integration:verbose": "ts-node --transpile-only tests/test-runner.ts --verbose",
    "test:integration:coverage": "ts-node --transpile-only tests/test-runner.ts --coverage --html",
    "test:performance": "ts-node --transpile-only tests/test-runner.ts --suites=performance",
    "test:security": "ts-node --transpile-only tests/test-runner.ts --suites=security",
    "test:all": "ts-node --transpile-only tests/test-runner.ts --html --json --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix"
  },
  "keywords": [
    "discord",
    "bot",
    "trading",
    "forex",
    "crypto",
    "analysis",
    "nodejs"
  ],
  "author": "Trading Bot Team",
  "license": "MIT",
  "type": "commonjs",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "cors": "^2.8.5",
    "discord.js": "^14.14.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.1.0",
    "helmet": "^7.1.0",
    "moment-timezone": "^0.5.43",
    "node-cron": "^3.0.3",
    "pg": "^8.11.3",
    "rate-limiter-flexible": "^4.0.1",
    "redis": "^4.6.12",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.4",
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.10.9",
    "chalk": "^4.1.2",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "jsonwebtoken": "^9.0.2",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2",
    "ts-jest": "^29.1.1",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/tests/unit"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.test.ts",
      "!src/**/__mocks__/**"
    ],
    "coverageReporters": [
      "text",
      "lcov"
    ],
    "coverageDirectory": "coverage",
    "testMatch": [
      "**/tests/unit/**/*.test.ts"
    ]
  }
}
